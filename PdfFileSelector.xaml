<UserControl x:Class="Ymm4Pdf.UI.PdfFileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ymm4Pdf.Shape"
             xmlns:pdf="clr-namespace:Ymm4Pdf"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" Name="this">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0"
                  x:Name="PART_ComboBox"
                  ItemsSource="{Binding ElementName=this, Path=PdfFiles}"
                  VerticalContentAlignment="Center"
                  DropDownOpened="ComboBox_DropDownOpened"
                  SelectionChanged="ComboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate DataType="{x:Type local:PdfFileItem}">
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" Margin="5" BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Center">
                            <Image Source="{Binding Thumbnail}" Stretch="Uniform" />
                        </Border>

                        <TextBlock Grid.Column="1" 
                                   Text="{Binding FileName}" 
                                   VerticalAlignment="Center" 
                                   TextTrimming="CharacterEllipsis"/>
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ComboBox.ItemContainerStyle>
        </ComboBox>

        <Button Grid.Column="1" Content="{Binding Source={x:Static pdf:Translate.Browse}}" Click="Button_Click"/>
    </Grid>
</UserControl>